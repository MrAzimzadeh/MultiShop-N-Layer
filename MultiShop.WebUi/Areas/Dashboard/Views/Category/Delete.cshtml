@model CategoryRemove
<div class="col-lg-6 m-auto">
    <div class="card shadow p-3 mb-4">
        <form method="post">
            <div class="text-center">
                @foreach (var categoryLanguage in Model.CategoryLanguages.Take(1))
                {
                    <h3>@categoryLanguage.Name</h3>
                }
            </div>
            <div class="form-group d-flex">
                <input class="btn btn-danger btn-sm w-50" type="submit" value="Delete" />
                <a href="/dashboard/category/index" class="btn btn-warning btn-sm w-50">Geri </a>
            </div>
        </form>
    </div>
</div>