@model IEnumerable<Product>
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <a href="/dashboard/Product/create">Create</a>
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#Id</th>
                            <th>
                                Photo
                            </th>

                            <th>#Lang</th>

                            <th>Title</th>
                            <th>Count </th>
                            <th>
                                Parametr
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>#Id</th>
                            <th>
                                Photo
                            </th>
                            <th>#Lang</th>
                            <th>Title</th>
                            <th>Count</th>
                            <th>
                                Parametr
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @* *@
                        @foreach (var product in Model)
                        {
                            <tr>
                                <th>@product.Id.Substring(0,10)</th>
                                <th>
                                    @foreach (var photo in product.PhotoUrl.Take(1))
                                    {
                                        <img src="@photo" width="100" height="100" />
                                    }
                                </th>
                                <th>
                                    @product.CreatedDate
                                </th>
                                <th>
                                    @* @(article. ? "Active" : "De Aktive"); *@
                                </th>
                                <th>
                                    @* @(article. ? "Active" : "De Aktive"); *@
                                </th>
                                <th class="d-flex">
                                    <a href="/dashboard/Product/Detail/@product.Id" class="btn btn-secondary">
                                        Deteil
                                    </a>
                                    <a href="/dashboard/Product/Delete/@product.Id" class="btn btn-danger w-50">
                                        Delete
                                    </a>
                                    <a href="/dashboard/Product/Edit/@product.Id" class="btn btn-primary w-50">Update</a>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>